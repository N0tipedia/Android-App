<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="#000000"
    android:orientation="vertical"
    android:padding="20dp"
    tools:context=".TextToSpch">


    <TextView
        android:id="@+id/head"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:elevation="5dp"
        android:fontFamily="@font/black_ops_one"
        android:text="TEXT TO SPEECH"
        android:textColor="#F8F5F5"
        android:textSize="36sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.087" />

    <EditText
        android:id="@+id/et_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="156dp"
        android:background="@drawable/bg_round"
        android:fontFamily="@font/black_ops_one"
        android:hint="Enter Text Here"
        android:lines="5"
        android:textAlignment="center"
        android:textColor="#FAF8F8"
        android:textColorHint="#FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/bt_convert"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="96dp"
        android:layout_weight="1"
        android:background="@drawable/bg_round"
        android:backgroundTint="#05E805"
        android:elevation="5dp"
        android:fontFamily="@font/black_ops_one"
        android:padding="10dp"
        android:rotationX="4"
        android:text="Convert"
        android:textColor="#FFFFFF"
        app:flow_horizontalAlign="start"
        app:layout_constraintTop_toBottomOf="@+id/et_input"
        tools:layout_editor_absoluteX="24dp" />

    <Button
        android:id="@+id/bt_clear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="56dp"
        android:background="@drawable/bg_round"
        android:backgroundTint="#78281F"
        android:elevation="5dp"
        android:fontFamily="@font/black_ops_one"
        android:padding="10dp"
        android:shadowColor="#47F141"
        android:text="Clear"
        android:textColor="#FFFFFF"
        app:layout_constraintTop_toBottomOf="@+id/bt_convert"
        tools:layout_editor_absoluteX="35dp" />

    <Button
        android:id="@+id/choose"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="152dp"
        android:background="@drawable/bg_round"
        android:backgroundTint="#78281F"
        android:elevation="5dp"
        android:fontFamily="@font/black_ops_one"
        android:padding="10dp"
        android:shadowColor="#47F141"
        android:text="Choose Txt File"
        android:textColor="#FFFFFF"
        app:layout_constraintTop_toBottomOf="@+id/bt_convert"
        tools:layout_editor_absoluteX="37dp" />



</androidx.constraintlayout.widget.ConstraintLayout>